public class Main {

    public static boolean isLeapYear(int year) {

        if (year % 400 == 0) {
            return true;
        }
        if (year % 100 == 0) {
            return false;
        }
        if (year % 4 == 0) {
            return true;
        }

        return false;
    }

    public static void main(String[] args) {

        int year = 4001; 

        if (isLeapYear(year)) {
            System.out.println("Год високосный");
        } else {
            System.out.println("Год не високосный");
        }
    }
}
